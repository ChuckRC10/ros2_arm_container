<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="test_robot">

  <!-- A root link -->
  <link name="world"/>

  <!-- A single, large, visible link -->
  <link name="visible_box_link">
    <visual>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- A joint to connect them -->
  <joint name="world_to_box_joint" type="fixed">
    <parent link="world"/>
    <child link="visible_box_link"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
  </joint>

</robot>
